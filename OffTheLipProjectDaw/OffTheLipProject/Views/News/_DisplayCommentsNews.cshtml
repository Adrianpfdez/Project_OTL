@model List<OffTheLipProject.Models.ModelOTL.NewsCommentViewModel>

@if (Model != null)
{
    if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <div>
                <label>Author: </label>
                <p style="display:inline">@item.Author</p>
            </div>
            <div>
                <label>Comment: </label>
                <p>@item.Text</p>
            </div>
        }
    }
    else
    {
        <p>There are no comments yet, be the first to comment!</p>
    }
}
